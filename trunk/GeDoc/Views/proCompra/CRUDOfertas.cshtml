            <div id="div2" class="BordeRedondeado BordesGrupoCRUD" style="margin-left: 0%; margin-top: 0px; padding: 8px; width: 98.6%;">
                @{ Html.RenderPartial("ProductosOfertas", Model.DetalleOferta); }
