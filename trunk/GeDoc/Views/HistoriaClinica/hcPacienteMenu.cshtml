<script>
    function onClickMenuHC(opcion) {
        $("#divHCMensajeError").hide();
        var wHCMenuOpciones = $("#wHCMenu").data("tWindow");
        //$('#wCRUDcatHCVademecum').css({ 'height': 280, 'width': 512 });
        //$('#wCRUDcatHCVademecum').find('div.t-window-content').css({ 'height': 250, 'width': 500 });
        wHCMenuOpciones.content('<img src="@Url.Content("~/Content/General/WaitingIndicator.gif")" width="22px" alt="" /><strong> Cargando...</strong>');
        UltimaOpcionMenu = opcion;
        switch (opcion) {
            case "Historia Familiar y Personal":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/ConsultasHistoriaFamiliarYPersonal"), { pacId: $("#pacId").val() });
                break;
            case "Familigrama":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/hcPacienteFamiligrama"), { pacId: $("#pacId").val() });
                break;
            case "Problemas Crónicos":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/hcPacienteAdultoProblemaCronico"), { pacId: $("#pacId").val() });
                break;
            case "Problemas Transitorios":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/hcPacienteAdultoProblemaTransitorio"), { pacId: $("#pacId").val() });
                break;
            case "Cuidados Preventivos":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/hcPacienteAdultoCuidadosPreventivos"), { pacId: $("#pacId").val() });
                break;
            case "Exámen Físico":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/ConsultasHistoriaExamenFisico"), { pacId: $("#pacId").val() });
                break;
            case "Evolución Periódica":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/ConsultasHistoriaEvolucion"), { Id: $("#pacId").val() });
                break;
            case "Vacunas":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/CalendarioDeProgramacion"), { idPaciente: $("#pacId").val() });
                break;
            case "Estudios Complementarios":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/hcDocumentacion"), { idPaciente: $("#pacId").val() });
                break;
            case "Diagnósticos":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/hcPacienteDiagnosticos"), { idPaciente: $("#pacId").val() });
                break;
            case "Prácticas":
                wHCMenuOpciones.ajaxRequest(GetPathApp("HistoriaClinica/hcPacientePracticas"), { idPaciente: $("#pacId").val() });
                break;
            default:
                jAlert("Opción no disponible", "¡Atención!");
                return;
        }
        wHCMenuOpciones.center().title(opcion).open();
        //wHCMenuOpciones.maximize();
    }
</script>